<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/lcdtt"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/appinfo_tv"
            style="@style/lcdtt_tv"
            android:layout_centerInParent="true"
            android:text="选择要更新的APK" />

        <ImageView
            android:id="@+id/back_apk"
            style="@style/lcdtt_iv"
            android:layout_alignParentLeft="true"
            android:background="@drawable/lcdtitle_im" />
    </RelativeLayout>


    <ListView
        android:id="@+id/apk_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/blueSky"
        android:dividerHeight="2dp"
        android:listSelector="@drawable/log_lv_item_bg" />

</LinearLayout>